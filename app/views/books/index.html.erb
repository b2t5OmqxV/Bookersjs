<div class="books-index">
<% flash[:notice] %>
<p class="index-flash"><%= flash[:notice] %></p>
<h1><strong>Books</strong></h1>
  <div class="table">
    <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(id: book.id) %></td>
      <td><%= link_to "Edit",edit_book_path(id: book.id) %></td>
      <td><%= link_to "Destroy",book_path(id: book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    <% end %>
    </tr>
    </tbody>
    </table>
  </div>

<div class="books-newbook">
<h2><strong>New book</strong></h2>
  <%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages', model: @book %>
    <div class='form-group-newbook'>
      <div class="newbook-text">
      <h4>Title</h4>
      <%= f.text_field :title %>
      </div>
      <div class="newbook-text">
      <h4>Body</h4>
      <%= f.text_area :body %>
      </div>

      <br><%= f.submit 'Create Book' %></br>
  <% end %>
    </div>
</div>
